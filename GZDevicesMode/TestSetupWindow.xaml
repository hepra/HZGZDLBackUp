                        <Button Grid.Column="0" Style="{StaticResource ResourceKey=GlassButton}" Name="btnTestParaCancel" Content="取消测试" Height="35" Width="80" FontFamily="黑体" FontSize="16"  Margin="0,0" Click="btnTestParaCancel_Click"></Button>
                    </Grid>
                </StackPanel>
